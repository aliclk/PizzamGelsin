@model IEnumerable<PizzamGelsin.Models.UrunUpdateListModel>

@{
                /**/

                ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.ActionLink("Oluştur", "Create", null, new
{
@class = "btn btn-primary",
data_ajax = "true",
data_ajax_method = "GET",
data_ajax_mode = "replace",
data_ajax_update = "#mahmut",
data_target = "#logoutModal",
data_toggle = "modal"
})
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UrunAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrunFiyat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrunAciklama)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrunAdet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlinmaAdedi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Yildiz)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UrunAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UrunFiyat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UrunAciklama)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlinmaAdedi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UrunAdet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Yildiz)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.UrunUpdateListModelID }, new
              {
                  @class = "btn btn-primary",
                  data_ajax = "true",
                  data_ajax_method = "GET",
                  data_ajax_mode = "replace",
                  data_ajax_update = "#mahmut",
                  data_target = "#logoutModal",
                  data_toggle = "modal"
              }) |
                @Html.ActionLink("Detay", "Details", new { id = item.UrunUpdateListModelID }, new
           {
               @class = "btn btn-primary",
               data_ajax = "true",
               data_ajax_method = "GET",
               data_ajax_mode = "replace",
               data_ajax_update = "#mahmut",
               data_target = "#logoutModal",
               data_toggle = "modal"
           }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.UrunUpdateListModelID }, new { @class = "btn btn-danger", @id = "delete" })
            </td>
        </tr>
    }

</table>

<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div id="mahmut" class="modal-body">

            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Iptal</button>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script>
            $("body").on("click", "#delete", function (e) {
                let devamı = this.href; // Evet'e basar ise devam etsin diye
                e.preventDefault(); // Delete işlemini engellemek için
                swal({
                    title: "Silmek istediğinize emin misiniz?",
                    text: "Bu işlem yapıldıktan sonra geri dönüşü yoktur!",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true,
                })
                    .then((willDelete) => {
                        if (willDelete) { //Eğer true ise
                            window.location = devamı; // işlemi devam ettir
                        }
                    });
            });
    </script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
}

